@model InvitaShare.ViewModels.EventUserDTO

<span class="text-danger">@TempData["ErrorMes"]</span>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGuestRegistered">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.EventId" value="@ViewBag.EventId" />
            </div>
            <div class="form-group">
                <label asp-for="UserMail" class="control-label"></label>
                <input asp-for="UserMail" class="form-control" />
                <span asp-validation-for="UserMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

